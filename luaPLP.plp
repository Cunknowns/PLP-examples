-- Calculator PLP with lua command
-- PLP -l luaPLP.plp

write("\nNumber1:")
a = read()
write("Number2:")
b = read()
print ("Plus: " .. a + b)
print ("Division: " .. a / b)
print ("Negative: " .. a - b)
print ("Multiplication: " .. a * b)
print ("Pi: " .. pi(a,b,1))
print ("Sigma: " .. sigma(a,b,1))
print ("Factorial A[" .. factorial(a) .. "] and B[" .. factorial(b) .. "]")
